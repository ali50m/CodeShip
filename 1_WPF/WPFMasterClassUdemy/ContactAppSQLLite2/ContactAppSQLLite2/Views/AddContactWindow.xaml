<Window x:Class="ContactAppSQLLite2.Views.AddContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactAppSQLLite2.Views"
        mc:Ignorable="d"
        Title="AddContactWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="nameTextbx" Margin="7"/>
            <TextBox x:Name="emailTextbx" Margin="7"/>
            <TextBox x:Name="phoneTextbx" Margin="7"/>
            <Button x:Name="saveButton" Content="Save Contact" Margin="7"
                    Click="saveButton_Click" />
        </StackPanel>
    </Grid>
</Window>
