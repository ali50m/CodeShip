@page "/employeeoverview"
@inherits EmployeeOverviewBase

<h1 class="page-title"> All Employees</h1>

@if (Employees == null)
{
    <p><em> Loading .......</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Employee</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>

        </thead>
        <tbody>
        @foreach (var emplo in Employees)
        {
            <tr>
                <td> <img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{emplo.EmployeeId}-small.jpg")" class="rounded-circle"/></td>
                <td>@emplo.EmployeeId</td>
                <td>@emplo.FirstName</td>
                <td>@emplo.LastName</td>
                <td>
                    <a href="@($" employeedetail/{emplo.EmployeeId}")" class="btn btrn-primary details"> Details Click </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
