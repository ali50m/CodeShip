<Window x:Class="DataBinder101.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinder101"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="133,162,171,0">
       <Grid.RowDefinitions>
           <RowDefinition Height="40"> </RowDefinition>
           <RowDefinition Height="40"> </RowDefinition>
           <RowDefinition Height="140"> </RowDefinition>
       </Grid.RowDefinitions> 
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"></ColumnDefinition>
            <ColumnDefinition Width="80"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0">
             <Label.Content> Told You</Label.Content>
        </Label>
        <Label Grid.Row="1">
            <Label.Content> Now I see</Label.Content>
        </Label>
        <TextBox Name="txtFal" Grid.Row="0" Grid.Column="1">
            <TextBox.Text>Well</TextBox.Text>
        </TextBox>
        <TextBox Name="txtFal1" Grid.Row="1" Grid.Column="1"
                 Text="{Binding ElementName=txtFal, Path=Text, Mode=TwoWay,
                        UpdateSourceTrigger=PropertyChanged}">
            
        </TextBox>
    </Grid>
</Window>
