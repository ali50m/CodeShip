<Window x:Class="DataCon101.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataCon101"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel DataContext="DockPanel DC..">
            <StackPanel>
                <DockPanel Margin="50" >
                    <TextBox x:Name="txtBox1" Width="150" DockPanel.Dock="Top" Margin="0,3" ToolTip="First" Text="{Binding Mode=OneWay}"/>
                    <TextBox x:Name="txtBox2" Width="150" DockPanel.Dock="Top" Margin="0,3" ToolTip="Second" Text="{Binding Mode=OneWay}"/>
                    <TextBox x:Name="txtBox3" Width="150" DockPanel.Dock="Top" Margin="0,3" ToolTip="Third" Text="{Binding Mode=OneWay}"/>
                </DockPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
