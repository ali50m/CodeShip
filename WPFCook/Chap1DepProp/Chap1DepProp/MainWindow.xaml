        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chap1DepProp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
 <StackPanel>
     <local:SajUserControl x:Name="dassault" />
     <TextBlock Text="{Binding YearofBools, ElementName=dassault}" FontSize="30"/>
